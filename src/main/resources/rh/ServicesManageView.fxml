<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.RhPro.controllers.rh.ServicesManageController"
      style="-fx-background-color:#f9f9ff; -fx-padding:25;">

    <!-- TITLE -->
    <Label text="Gestion des Services"
           style="-fx-font-size:26px;
                  -fx-font-weight:900;
                  -fx-text-fill:#6d2269;" />

    <HBox spacing="20">

        <!-- LEFT CARD -->
        <VBox spacing="15"
              HBox.hgrow="ALWAYS"
              style="-fx-background-color:white;
                     -fx-background-radius:25;
                     -fx-padding:20;
                     -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 25,0,0,8);">

            <!-- ðŸ”Ž RECHERCHE -->
            <HBox spacing="10" alignment="CENTER_LEFT">

                <Label text="Rechercher par :"
                       style="-fx-font-weight:900;" />

                <ComboBox fx:id="cbCriteria"
                          prefWidth="150"
                          style="-fx-background-radius:15;" />

                <TextField fx:id="tfSearch"
                           promptText="Valeur..."
                           prefWidth="220"
                           style="-fx-background-radius:15;
                                  -fx-border-radius:15;
                                  -fx-border-color:#ddd6fe;
                                  -fx-focus-color:#6d2269;" />

                <Button text="Reset"
                        onAction="#refresh"
                        style="-fx-background-color:black;
                               -fx-text-fill:white;
                               -fx-background-radius:15;
                               -fx-font-weight:900;" />

            </HBox>

            <!-- TABLE -->
            <TableView fx:id="table"
                       prefHeight="500"
                       style="-fx-background-radius:20;
                              -fx-border-radius:20;
                              -fx-border-color:#ddd6fe;
                              -fx-table-cell-border-color:transparent;">

                <columns>
                    <TableColumn fx:id="colId" text="ID"/>
                    <TableColumn fx:id="colEmploye" text="EmployÃ©"/>
                    <TableColumn fx:id="colTitre" text="Titre"/>
                    <TableColumn fx:id="colDate" text="Date"/>
                    <TableColumn fx:id="colDesc" text="Description"/>
                </columns>

            </TableView>

            <Label fx:id="msgLabel"
                   style="-fx-font-weight:900;" />

        </VBox>

        <!-- RIGHT CARD -->
        <VBox spacing="20"
              prefWidth="340"
              style="-fx-background-color:white;
                     -fx-background-radius:25;
                     -fx-padding:25;
                     -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 25,0,0,8);">

            <Label text="DÃ©cision RH"
                   style="-fx-font-size:20px;
                          -fx-font-weight:900;
                          -fx-text-fill:#6d2269;" />

            <Label text="Commentaire"
                   style="-fx-font-weight:700;" />

            <TextArea fx:id="taCommentaire"
                      prefRowCount="5"
                      wrapText="true"
                      style="-fx-background-radius:15;
                             -fx-border-radius:15;
                             -fx-border-color:#ddd6fe;
                             -fx-focus-color:#6d2269;" />

            <HBox spacing="15" alignment="CENTER">

                <Button text="âœ… Traiter"
                        prefWidth="140"
                        onAction="#onTraiter"
                        style="-fx-background-color:#6d2269;
                               -fx-text-fill:white;
                               -fx-font-weight:900;
                               -fx-background-radius:20;
                               -fx-padding:10 15;" />

                <Button text="âŒ Refuser"
                        prefWidth="140"
                        onAction="#onRefuse"
                        style="-fx-background-color:black;
                               -fx-text-fill:white;
                               -fx-font-weight:900;
                               -fx-background-radius:20;
                               -fx-padding:10 15;" />

            </HBox>

        </VBox>

    </HBox>

</VBox>
