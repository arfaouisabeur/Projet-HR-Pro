<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="25"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.RhPro.controllers.employe.MesServicesController"
      style="-fx-padding:30; -fx-background-color: linear-gradient(to bottom,#ddd6fe,#ffffff);">

    <!-- HEADER -->
    <Label text="Mes Services / Demandes"
           style="-fx-font-size:26px;
                  -fx-font-weight:900;
                  -fx-text-fill:#6d2269;" />

    <!-- FORMULAIRE NOUVELLE DEMANDE -->
    <VBox spacing="18"
          style="-fx-background-color:white;
                 -fx-background-radius:20;
                 -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 15,0,0,4);
                 -fx-padding:25;"
          prefWidth="600">

        <Label text="Nouvelle Demande"
               style="-fx-font-size:18px;
                      -fx-font-weight:800;
                      -fx-text-fill:#6d2269;" />

        <VBox spacing="10">
            <Label text="Titre" style="-fx-font-weight:700;" />
            <TextField fx:id="tfTitre"
                       style="-fx-background-radius:12;
                              -fx-border-radius:12;
                              -fx-border-color:#ddd6fe;" />
            <Label fx:id="lblTitreError"
                   visible="false"
                   managed="false"
                   style="-fx-text-fill:#dc2626; -fx-font-size:12;" />
        </VBox>

        <VBox spacing="10">
            <Label text="Description" style="-fx-font-weight:700;" />
            <TextArea fx:id="taDescription"
                      wrapText="true"
                      prefRowCount="3"
                      style="-fx-background-radius:12;
                             -fx-border-radius:12;
                             -fx-border-color:#ddd6fe;" />
            <Label fx:id="lblDescriptionError"
                   visible="false"
                   managed="false"
                   style="-fx-text-fill:#dc2626; -fx-font-size:12;" />
        </VBox>

        <Button text="Envoyer"
                onAction="#onSubmit"
                style="-fx-background-color:#6d2269;
                       -fx-text-fill:white;
                       -fx-font-weight:800;
                       -fx-background-radius:30;
                       -fx-padding:12 28;
                       -fx-cursor:hand;" />

        <Label fx:id="lblMsg"
               style="-fx-font-weight:800;
                      -fx-text-fill:black;" />

    </VBox>

    <!-- HISTORIQUE / CARTES DE SERVICES -->
    <VBox spacing="18"
          style="-fx-background-color:white;
                 -fx-background-radius:20;
                 -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 15,0,0,4);
                 -fx-padding:25;">

        <Label text="Historique"
               style="-fx-font-size:18px;
                      -fx-font-weight:800;
                      -fx-text-fill:#6d2269;" />

        <ScrollPane fitToWidth="true" prefHeight="450" style="-fx-background-color:transparent;">
            <VBox fx:id="cardsContainer" spacing="15">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
            </VBox>
        </ScrollPane>

        <Button text="RafraÃ®chir"
                onAction="#refresh"
                style="-fx-background-color:#ddd6fe;
                       -fx-text-fill:#6d2269;
                       -fx-font-weight:800;
                       -fx-background-radius:30;
                       -fx-padding:10 24;
                       -fx-cursor:hand;" />

    </VBox>

</VBox>
