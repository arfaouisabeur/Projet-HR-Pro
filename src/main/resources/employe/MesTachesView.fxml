    </HBox>

    <!-- Kanban Board -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- TODO Column -->
        <VBox fx:id="todoColumn" spacing="10" HBox.hgrow="ALWAYS"
