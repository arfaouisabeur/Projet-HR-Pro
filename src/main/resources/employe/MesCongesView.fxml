<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="25"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.RhPro.controllers.employe.MesCongesController"
      style="-fx-padding:30;
             -fx-background-color: linear-gradient(to bottom,#ddd6fe,#ffffff);">

    <!-- HEADER -->
    <Label text="Mes demandes Congé / Télétravail"
           style="-fx-font-size:26px;
                  -fx-font-weight:900;
                  -fx-text-fill:#6d2269;" />

    <!-- FORM CARD -->
    <VBox spacing="18"
          style="-fx-background-color:white;
                 -fx-background-radius:20;
                 -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 15,0,0,4);
                 -fx-padding:25;">

        <Label text="Nouvelle demande"
               style="-fx-font-size:18px;
                      -fx-font-weight:800;
                      -fx-text-fill:#6d2269;" />

        <HBox spacing="25">

            <VBox spacing="8" prefWidth="250">
                <Label text="Type"
                       style="-fx-font-weight:700;" />
                <ComboBox fx:id="cbType"
                          promptText="Choisir (CONGE / TT)"
                          style="-fx-background-radius:12;
                                 -fx-border-radius:12;
                                 -fx-border-color:#ddd6fe;" />
                <Label fx:id="typeErrorLabel"
                       visible="false"
                       managed="false"
                       style="-fx-text-fill:#dc2626; -fx-font-size:12;" />
            </VBox>

            <VBox spacing="8">
                <Label text="Date début"
                       style="-fx-font-weight:700;" />
                <DatePicker fx:id="dpDebut"
                            style="-fx-background-radius:12;
                                   -fx-border-radius:12;
                                   -fx-border-color:#ddd6fe;" />
                <Label fx:id="dateDebutErrorLabel"
                       visible="false"
                       managed="false"
                       style="-fx-text-fill:#dc2626; -fx-font-size:12;" />
            </VBox>

            <VBox spacing="8">
                <Label text="Date fin"
                       style="-fx-font-weight:700;" />
                <DatePicker fx:id="dpFin"
                            style="-fx-background-radius:12;
                                   -fx-border-radius:12;
                                   -fx-border-color:#ddd6fe;" />
                <Label fx:id="dateFinErrorLabel"
                       visible="false"
                       managed="false"
                       style="-fx-text-fill:#dc2626; -fx-font-size:12;" />
            </VBox>

        </HBox>

        <VBox spacing="8">
            <Label text="Description"
                   style="-fx-font-weight:700;" />
            <TextArea fx:id="taDescription"
                      prefRowCount="3"
                      wrapText="true"
                      style="-fx-background-radius:12;
                             -fx-border-radius:12;
                             -fx-border-color:#ddd6fe;" />
            <Label fx:id="descErrorLabel"
                   visible="false"
                   managed="false"
                   style="-fx-text-fill:#dc2626; -fx-font-size:12;" />
        </VBox>

        <HBox spacing="15" alignment="CENTER_LEFT">

            <!-- Animated Submit Button -->
            <Button text="Envoyer la demande"
                    onAction="#onSubmit"
                    style="-fx-background-color:#6d2269;
                           -fx-text-fill:white;
                           -fx-font-weight:800;
                           -fx-background-radius:30;
                           -fx-padding:12 28;
                           -fx-cursor:hand;">
            </Button>

            <Label fx:id="lblMsg"
                   style="-fx-font-weight:800;
                          -fx-text-fill:black;" />

        </HBox>

    </VBox>

    <!-- HISTORIQUE -->
    <VBox spacing="15"
          style="-fx-background-color:white;
                 -fx-background-radius:20;
                 -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 15,0,0,4);
                 -fx-padding:25;">

        <Label text="Historique"
               style="-fx-font-size:18px;
                      -fx-font-weight:800;
                      -fx-text-fill:#6d2269;" />

        <ScrollPane fitToWidth="true"
                    prefHeight="450"
                    style="-fx-background-color:transparent;">

            <VBox fx:id="cardContainer" spacing="15" />
        </ScrollPane>

        <Button text="Rafraîchir"
                onAction="#refresh"
                style="-fx-background-color:#ddd6fe;
                       -fx-text-fill:#6d2269;
                       -fx-font-weight:800;
                       -fx-background-radius:30;
                       -fx-padding:10 24;
                       -fx-cursor:hand;" />

    </VBox>

</VBox>
